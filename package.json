{
  "name": "svelte-uikit",
  "version": "0.0.1",
  "description": "UIkit components built with Svelte.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "start": "start-storybook -p 6006 -s public",
    "storybook:build": "build-storybook -s public -o docs",
    "storybook:serve": "cd docs && servor && cd ..",
    "format": "prettier --write \"{,!(node_modules|docs)/**/}*.{js,md,mdx,svelte}\"",
    "lint": "eslint --fix --ext .js,.svelte src/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svelte-uikit/svelte-uikit.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/svelte-uikit/svelte-uikit/issues"
  },
  "homepage": "https://github.com/svelte-uikit/svelte-uikit#readme",
  "keywords": [
    "svelte",
    "uikit",
    "components"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^5.3.9",
    "@storybook/addon-docs": "^5.3.9",
    "@storybook/addon-knobs": "^5.3.9",
    "@storybook/addon-links": "^5.3.9",
    "@storybook/addons": "^5.3.9",
    "@storybook/svelte": "^5.3.9",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "react": "^16.12.0",
    "react-is": "^16.12.0",
    "servor": "^3.1.0",
    "svelte": "^3.18.1",
    "svelte-loader": "^2.13.6"
  },
  "peerDependencies": {
    "svelte": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,html,json,md,mdx,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,svelte}": [
      "eslint --fix",
      "git add"
    ]
  }
}
